#!/usr/bin/env bash

# News Reader


case $BLOCK_BUTTON in
	1) setsid "$TERMINAL" -e newsboat ;;
	2) setsid newsboat -x reload > /dev/null & exit ;;
	3) pgrep -x dunst > /dev/null && notify-send "ðŸ“° Updating News Feeds" && setsid newsboat -x reload > /dev/null ;;
	*) newsboat -x print-unread | awk '{print $1}'
esac

pgrep -x dunst > /dev/null && notify-send "ðŸ“° Updating News Feeds" && newsboat -x reload > /dev/null && newsboat -x print-unread | awk '{print $1}'
